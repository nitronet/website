{% block title %}Blog - {% endblock title %}

{% extends "layouts/main.twig" %}

{% block contents %}
<div class="section jumbotron">
      <div class="container">
          <h3 style="margin:0;padding:0"><i class="glyphicon glyphicon-pencil pull-right" style="font-size: 130px; margin-top: 30px; margin-left: 70%; opacity: 0.2; position: absolute;"></i> Blog</h3>
      </div>
  </div>
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-8">
        <ol class="breadcrumb" style="margin-bottom:40px">
  <li><a href="#">Blog</a></li>
  <li class="active"><a href="#">Category</a></li>
</ol>
{% set list = articles.one(query.slug) %}
    {% for article in list %}
        <h2 style="margin-bottom: 5px;"><a href="{{ _helper.url('PageView', {page: 'blog/article', slug: article.slug}, true)|raw }}">{{ article.title }}</a></h2>
        <div class="btn-group">
            <p style="margin-bottom: 20px; color: #999; padding:0;"><a href="{{ _helper.url('PageView', {page: 'blog/article', slug: article.slug}, true)|raw }}"><i class="glyphicon glyphicon-link"></i></a> posted on {{ article.date }} in <a href="#">Fwk</a>. <a href="#comments">No comments</a>.</p>
        </div>
        <div class="btn-group" style=" vertical-align: top;">
            <button type="button" style="margin-top:-3px;font-size: 14px;" class="btn btn-link btn-xs dropdown-toggle" data-toggle="dropdown">
               <i class="glyphicon glyphicon-share"></i>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Action</a></li>
              <li><a href="#">Another action</a></li>
              <li><a href="#">Something else here</a></li>
            </ul>
          </div>
        {{ article.content|raw }}
        {% endfor %}
    <h3><a name="comments"></a>Comments</h3>
    </div>
    <div class="col-lg-4 col-md-4" style="">
        <form class="form-horizontal">
            <div class="form-group">
              <div class="col-lg-12">
                <input class="form-control" id="search" placeholder="Search the blog" type="text">
              </div>
            </div>
        </form>
        <ul class="nav nav-tabs"  style="margin: 40px 0">
          <li class="active">
            <a href="#">Recent Articles</a>
          </li>
          <li>
            <a href="#">Categories</a>
          </li>
        </ul>
        <p><a href="#">Subscribe (RSS) <i class="glyphicon glyphicon-signal"></i></a></p>
    </div>
  </div>
</div>
{% endblock %}